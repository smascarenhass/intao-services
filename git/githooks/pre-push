#!/bin/bash

echo "üöÄ Running deploy.sh before push..."

DEPLOY_SCRIPT="$(git rev-parse --show-toplevel)/git/scripts/deploy.sh"

if [ -f "$DEPLOY_SCRIPT" ]; then
    bash "$DEPLOY_SCRIPT"
    if [ $? -eq 0 ]; then
        echo "‚úÖ Deployment successful. Proceeding with push..."
        exit 0
    else
        echo "‚ùå Deployment failed. Aborting push."
        exit 1
    fi
else
    echo "‚ùå deploy.sh not found in $DEPLOY_SCRIPT"
    exit 1
fi
